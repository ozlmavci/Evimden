@using Evimden.UI.Web.Models.VMs.RoleVMs
@model AssignRoleVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4 col-8">
    <div class="card-header py-4 d-flex justify-content-between align-items-center">
        <div col-8>
            <h6 class="m-0 font-weight-bold text-primary">Rol Ata</h6>
        </div>
        <div col-4>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="AssignRole" method="post">
            <div class="form-group row">
                <label asp-for="UserId" class="col-sm-2 col-form-label">Kullanıcı</label>
                <div class="col-sm-10">
                    <select asp-for="UserName" class="form-control" name="UserName">
                        <option value="">Kullanıcı Seçin</option>
                        @foreach (var user in Model.Users)
                        {
                            <option value="@user.UserName">@user.FirstName @user.LastName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label">Rol</label>
                <div class="col-sm-10">
                    <select asp-for="RoleName" class="form-control" name="RoleName">
                        <option value="">Rol Seçin</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Name">@role.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

