@using Evimden.CoreLayer.DTOs.IdentityDTOs
@model CustomRoleDto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4 col-8">
    <div class="card-header py-4 d-flex justify-content-between align-items-center">
        <div col-8>
            <h6 class="m-0 font-weight-bold text-primary">Rol Düzenle</h6>
        </div>
        <div col-4>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="EditRole" method="post">
            <div class="form-group row">
                <div class="col-sm-10">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Rol Id</label>
                    <input asp-for="Id" class="form-control" name="Id" value="@Model.Id" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Rol Adı</label>
                    <input asp-for="Name" type="text" class="form-control" name="Name" value="@Model.Name"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

