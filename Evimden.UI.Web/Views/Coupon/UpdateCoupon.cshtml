@model Evimden.CoreLayer.DTOs.OrderDTOs.CouponDto

@{
    ViewData["Title"] = "Kuponu Düzenle";
}

<h1>Kuponu Düzenle</h1>

<form asp-action="UpdateCoupon" method="post">
    <div class="form-group">
        <label for="CouponId">Kupon ID</label>
        <input type="text" id="CouponId" name="CouponId" class="form-control" value="@Model.CouponId" readonly />
    </div>

    <div class="form-group">
        <label for="UserId">Kullanıcı ID</label>
        <input type="text" id="UserId" name="UserId" class="form-control" value="@Model.UserId" required />
    </div>

    <div class="form-group">
        <label for="Amount">Tutar</label>
        <input type="number" id="Amount" name="Amount" class="form-control" value="@Model.Amount" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="Rate">İndirim Oranı</label>
        <input type="number" id="Rate" name="Rate" class="form-control" value="@Model.Rate" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="ExpirationDate">Son Kullanma Tarihi</label>
        <input type="date" id="ExpirationDate" name="ExpirationDate" class="form-control" value="@Model.ExpirationDate.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-check">
        <input type="checkbox" id="IsUsed" name="IsUsed" class="form-check-input" value="true" @(Model.IsUsed ? "checked" : "") />
        <label class="form-check-label" for="IsUsed">Kupon Kullanıldı</label>
    </div>
    <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
</form>
