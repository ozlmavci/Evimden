@model List<Evimden.CoreLayer.DTOs.OrderDTOs.CouponDto>

@{
    ViewData["Title"] = "Kuponlar";
}

<h1>Kuponlar</h1>

<table class="table">
    <thead>
        <tr>
            <th>Kupon ID</th>
            <th>Kullanıcı ID</th>
            <th>Tutar</th>
            <th>İndirim Oranı</th>
            <th>Son Kullanma Tarihi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coupon in Model)
        {
            <tr>
                <td>@coupon.CouponId</td>
                <td>@coupon.UserId</td>
                <td>@coupon.Amount</td>
                <td>@coupon.Rate</td>
                <td>@coupon.ExpirationDate.ToString("yyyy-MM-dd")</td>
                <td>@(coupon.IsUsed ? "Kullanıldı" : "Kullanılmadı")</td>
                <td>
                    <a href="@Url.Action("GetCoupon", new { id = coupon.CouponId })">Detaylar</a> |
                    <a href="@Url.Action("UpdateCoupon", new { id = coupon.CouponId })">Düzenle</a> |
                    <a href="@Url.Action("DeleteCoupon", new { id = coupon.CouponId })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AddCoupon")" class="btn btn-primary">Yeni Kupon Ekle</a>
