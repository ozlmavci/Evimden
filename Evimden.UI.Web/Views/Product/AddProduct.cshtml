 @model Evimden.CoreLayer.DTOs.ProductDTOs.ProductDto

@{
    ViewData["Title"] = "Ürün Ekle";
}

<h1>Yeni Ürün Ekle</h1>

<form asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ProductName">Ürün Adı</label>
        <input type="text" id="ProductName" name="ProductName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Description">Açıklama</label>
        <textarea id="Description" name="Description" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label for="Price">Fiyat</label>
        <input type="number" id="Price" name="Price" class="form-control" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="DiscountRate">İndirim Oranı</label>
        <input type="number" id="DiscountRate" name="DiscountRate" class="form-control" step="0.01" />
    </div>

    <div class="form-group">
        <label for="ContainGluten">Gluten İçeriyor Mu?</label>
        <input type="checkbox" id="ContainGluten" name="ContainGluten" class="form-control" />
    </div>

    <div class="form-group">
        <label for="IsVisible">Görünür Mü?</label>
        <input type="checkbox" id="IsVisible" name="IsVisible" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Images">Ürün Resimleri</label>
        <input type="file" id="Images" name="Images" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-primary">Ürünü Ekle</button>
</form>
