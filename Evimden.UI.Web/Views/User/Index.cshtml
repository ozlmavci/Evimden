@using Evimden.UI.Web.Models.VMs.IdentityVMs
@model UserVM

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In/Up Form</title>
    <link href="~/css/identity.css" rel="stylesheet">
</head>
<body>
    <div class="container" id="container">
        <!-- Kayıt Olma Formu -->
        <div class="form-container sign-up-container">
            <form asp-action="Index" method="post">
                <h1>Kayıt Ol</h1>

                <!-- Doğrulama Hatalarını Toplu Gösterme -->
                <div>
                    @if (TempData["ModelState"] != null)
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    }
                </div>

                <!-- Form Alanları -->
                <div class="form-group">
                    <input asp-for="UserName" name="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" name="Email" type="email" class="form-control" placeholder="E-mail Adresi" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="FirstName" name="FirstName" class="form-control" placeholder="İsim" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="LastName" name="LastName" class="form-control" placeholder="Soyisim" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PhoneNumber" name="PhoneNumber" class="form-control" placeholder="Telefon Numarası" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" name="Password" type="password" class="form-control" placeholder="Şifre" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PasswordConfirm" name="PasswordConfirm" type="password" class="form-control" placeholder="Şifre Tekrar" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Transaction" name="Transaction" type="hidden" class="form-control" value="0" />
                </div>
                <button type="submit">Kayıt Ol</button>
            </form>
        </div>

        <!-- Giriş Yapma Formu -->
        <div class="form-container sign-in-container">
            <form asp-action="Index" method="post">
                <h1>Giriş Yap</h1>

                <!-- Form Alanları -->
                <div class="form-group">
                    <input asp-for="UserName" name="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" name="Password" type="password" class="form-control" placeholder="Şifre" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Transaction" name="Transaction" type="hidden" class="form-control" value="1" />
                </div>
                <div class="form-group">
                    <div class="form-check remember-me-container">
                        <input asp-for="RememberMe" name="RememberMe" class="form-check-input remember-me-checkbox" id="rememberMe" type="checkbox" />
                        <label for="rememberMe" class="form-check-label remember-me-label">Beni Hatırla</label>
                    </div>
                </div>

                <a href="#">Şifrenizi mi unuttunuz?</a>
                <button type="submit">Giriş Yap</button>
            </form>
        </div>

        <!-- Overlay Panel -->
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Hoşgeldiniz!</h1>
                    <p>Bağlantıda kalabilmek için kişisel bilgilerinizle giriş yapın.</p>
                    <button class="ghost" id="signIn">Giriş Yap</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Merhaba!</h1>
                    <p>Evimden evinize lezzetler.</p>
                    <button class="ghost" id="signUp">Kayıt Ol</button>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p><i class="fa fa-heart"></i><a target="_blank" href="https://github.com/ozlmavci">Özlem Avcı</a> </p>
    </footer>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <script src="~/js/identity.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="false"></script>

</body>
</html>
